STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# App URL
# Staging: https://new.hanumanworldphuket.com
# Production: https://hanumanworldphuket.com
NEXT_PUBLIC_APP_URL=https://new.hanumanworldphuket.com

# Resend (Email)
RESEND_API_KEY=re_xxxxx
